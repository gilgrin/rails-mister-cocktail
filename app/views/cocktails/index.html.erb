<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://m.media-amazon.com/images/S/aplus-media/sc/9a474f47-d43e-41df-8aea-d3051550b322.__CR0,0,970,600_PT0_SX970_V1___.jpg);">
  <div class="container">
    <h1>Mister Cocktail</h1>
    <p>
      <span id="banner-typed-text"></span>
    </p>
  </div>
</div>

<%= cl_image_tag("iqatp2gxr1ckwe8gawfe",
      width: 400, height: 300, crop: :fill) %>

<!-- for face detection -->
<%= cl_image_tag("fh9wialdmvayk8qdvykf",
      width: 150, height: 150, crop: :thumb, gravity: :face) %>

<div class="container mt-3">
  <div class="row">
    <div class="col">
      <div class="cards">
        <% @cocktails.each do |cocktail| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
          <% cocktail_details = "#{cocktail.name}" %>
          <%= link_to cocktail_details, cocktail_path(cocktail) %>
        </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-6 text-align-center form-add-cocktail">
        <%= simple_form_for(@cocktail) do |f| %>
          <%= f.input :name %>
          <%= f.input :photo, as: :file %>
          <%= f.submit "Add Cocktail", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
